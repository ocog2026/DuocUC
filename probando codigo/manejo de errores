# Error de nombre (NameError)
print(variable_no_definida)

# Error de tipo (TypeError)
resultado = 5 + "10"  # No se pueden sumar un entero y una cadena

# Error de valor (ValueError)
numero = int("texto")  # No se puede convertir "texto" a entero
# Error de índice (IndexError)
lista = [1, 2, 3]
print(lista[5])  # No existe el índice 5 en la lista
# Error de clave (KeyError)
diccionario = {"nombre": "Alice", "edad": 30}
print(diccionario["ciudad"])  # No existe la clave "ciudad" en el
diccionario
# Error de división por cero (ZeroDivisionError)
resultado = 10 / 0  # No se puede dividir por cero
# Error de importación (ImportError)
# Error de atributo (AttributeError)
cadena = "Hola"
print(cadena.no_existe)  # La cadena no tiene el atributo "no_existe"
# Error de archivo (FileNotFoundError)
with open("archivo_inexistente.txt", "r") as f:
    contenido = f.read()  # No existe el archivo "archivo_inexistente.txt"
